<h2>Lista de categoria</h2>
<hr>
<a href="/admin/categorias/add" class="btn btn-success">Adicionar nova categoria</a>
{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>{{slog}}</small> <br>
            <small>{{data}}</small><br>
            <a href="/admin/categorias/edit/{{_id}}">
                <button class="btn btn-success mt-2">Editar Categorias</button>
            </a>
        </div>
    </div>
{{else}}
{{/each}}